.btn
	display inline-block
	padding 16px 43px
	font 18px $MBold
	line-height 1
	text-transform uppercase
	text-align center
	color $text-color
	border 2px solid $basic-black-color
	transition all .17s ease-in-out
	backface-visibility hidden
	&:hover
		background-color $basic-black-color
		color $basic-white-color
		opacity 1 !important
	
	
	&-close
		display inline-block
		width 20px
		height 20px
		background url('../img/icons/svg/close-ic.svg') center center no-repeat
		background-size 20px 20px
		
	
	&-top
		display none
		border-radius 50%
		width 40px
		height 40px
		position fixed
		right 30px
		bottom 30px
		background-color $accent-color
		z-index 10
		text-align center
		transition all .17s ease-in-out
		box-shadow 0px 0px 13px 0px rgba($basic-black-color, 0.21)
		&:after
			content ''
			display inline-block
			position absolute
			top 15px
			left 10px
			width 20px
			height 20px
			transform rotate(-45deg)
			border-top 1px solid $basic-black-color
			border-right 1px solid $basic-black-color
			transition all .23s ease-in-out
		&:hover
			background-color $basic-black-color
			transform scale(1.1)
			box-shadow 0px 0px 13px 0px rgba($accent-color, 0.21)
			&:after
				border-top 1px solid $accent-color
				border-right 1px solid $accent-color
		

	&-hamburger
		display none
		flex none
		width 40px
		height 40px
		position relative
		transition background-color .17s ease-in-out
		z-index 6
		transform translateX(8px)
		&__line
			width 22px
			height 2px
			background-color $basic-black-color
			display block
			margin 6px auto
			transition all 0.3s ease-in-out	
		&.is-active
			.btn-hamburger__line
				&:nth-child(1)
					transform translateY(4px) rotate(45deg)
				&:nth-child(2)
					transform translateY(-4px) rotate(-45deg)
		