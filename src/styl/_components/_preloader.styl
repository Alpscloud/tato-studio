// Loader
.preloader
	display block
	position absolute
	position-center()
	z-index 1001
	perspective 500px
	width 50px
	height 40px
	text-align center
	
		
		
		
	&__wrapper
		position fixed
		top 0
		left 0
		width 100%
		height 100%
		z-index 1000
	&__section
		position fixed
		top 0
		width 51%
		height 100%
		background-color $basic-white-color
		z-index 1000
		transform translateX(0)
		&--left
			left 0
		&--right
			right 0
			
.rect
	background-color $basic-black-color
	height 100%
	width 6px
	display inline-block
	animation sk-stretchdelay 1.2s infinite ease-in-out
			
.rect2
	animation-delay -1.1s
.rect3
	animation-delay -1.0s
.rect4
	animation-delay -0.9s
.rect5
	animation-delay -0.8s

@keyframes sk-stretchdelay 
	0%, 40%, 100% 
		transform scaleY(0.4)
	20% 
		transform scaleY(1.0)
	

.is-loaded

	.preloader
		opacity 0
		transition all 0.3s ease-out
		&__wrapper
			visibility hidden
			transition all 0.3s 1s ease-out
		&__section
			&--left
				transform translateY(-100%)
				transition all 0.7s 0.3s cubic-bezier(0.645, 0.045, 0.355, 1.000)
			&--right
				transform translateY(100%)
				transition all 0.7s 0.3s cubic-bezier(0.645, 0.045, 0.355, 1.000)
